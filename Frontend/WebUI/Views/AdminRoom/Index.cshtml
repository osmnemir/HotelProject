@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda No</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
   
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.RoomNumber</td>
            <td>@item.Title</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn btn-success">Güncelle</a></td>
            
        </tr>
    }
</table>
<a href="/AdminRoom/AddRoom/" class="btn btn-info">Yeni Oda Girişi</a>
